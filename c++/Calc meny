int CalcIf();
int CalcSwitch();
#include <iostream>
#include <windows.h>
#include <locale>



int main()
{


	bool run = true;
	setlocale(LC_ALL, "sv-SE");
	SetConsoleOutputCP(65001);

	while (run == true)
	{
		
		system("CLS");
		int Choice = 0;
		std::cout << "\n[1] Method CalcIf()\n";
		std::cout << "[2] Method CalcSwitch()\n";
		std::cout << "[3] EndProgram\n";
		
		while (!(std::cin >> Choice))
		{
			std::cout << "Fel du mÃ¥ste inputa ett nummer:  ";
			std::cin.clear();
			std::cin.ignore(10000, '\n');
		}

		if (Choice == 1)
		{
			CalcIf();

		}
		else if (Choice == 2)
		{
			CalcSwitch();

		}
		else if (Choice == 3)
		{
			run = false;
		}
		

	}


	
	return 0;
}
