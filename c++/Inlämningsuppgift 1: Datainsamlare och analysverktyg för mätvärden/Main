#include <iostream>
#include <vector>
#include <string>
#include <list>
#include <cstring>

int main()
{
    bool run = true;


    
        

std::list<std::vector<int>> ListVal = {};

    //menyn
    while (run == true)
    {

        int Choice;

        
        
        
        
        std::cout << "---------------------------------" << std::endl;
        std::cout << "Datainsamlare och analysverktyg för mätvärden" << std::endl;
        std::cout << "[1] Input more more data" << std::endl;
        std::cout << "[2] Print all data" << std::endl;
        std::cout << "[3] More options for data" << std::endl;
        std::cout << "[4]" << std::endl;
        std::cout << "[5]" << std::endl;
        std::cout << "[6] End Program" << std::endl;
        /*std::cout << "[7]" << std::endl;
        std::cout << "[8]" << std::endl;
        std::cout << "[9]" << std::endl;
        std::cout << "[10]" << std::endl;*/
        std::cout << "---------------------------------" << std::endl;

        
        
        
        while (!(std::cin >> Choice))
        {
            std::cout << "Error you have inputed a invalid value please input one of the meny options: " << std::endl;
            std::cin.clear();
            std::cin.ignore(10000, '\n');
        }

        switch (Choice)
        {
         case 1:

         {
             std::cout << "How many values do you want to add" << std::endl;
             int times = 0;
             std::cin >> times;
             for (int i = 0; i < times; i++)
             {

                 std::vector<int> Values(2);

                 std::cout << "[" << i + 1 << "]" << "Value: ";

                 int SubVal = 0;
                 std::cin >> SubVal;
                 //Time added
                 Values[0] = 0;

                 Values[1] = SubVal;
                 std::cout << Values[0] << Values[1];

                 ListVal.push_back(Values);

             }
             
         }
            
            
            break;

         case 2:

         {
             std::cout << "You have [" << size(ListVal) << "]" << std::endl;
             std::cout << "Do you want to list them [Y/N] : ";
             std::string Des;
             std::cin >> Des;
             if (Des == "Y")
             {

                 for (const auto& vec : ListVal) 
                 {
                     for (int n : vec) 
                     {
                         std::cout << n << " ";
                     }
                     std::cout << std::endl;
                 }
                 
             }
             else if (Des == "N")
             {
                 break;
             }
             else
             {
                 std::cout << "Wrong input" << std::endl;
             }
             
         }
            
            break;

         case 3:
         {
             //if else beroende på om du har en value eller flera values
             if (size(ListVal) == 1)
             {

                 std::cout << "You have " << size(ListVal) << " value" << std::endl;
                 int SumVal = 0;
                 for (const auto& VecVal : ListVal)
                 {

                     SumVal = SumVal + VecVal[1];

                 }

                 std::cout << "The sum of all the values is " << SumVal << std::endl;
             }

             else if (size(ListVal) > 1)
             {

                 std::cout << "You have " << size(ListVal) << " values" << std::endl;
                int SumVal = 0;
                for (const auto& VecVal : ListVal)
                {
                    
                    SumVal = SumVal + VecVal[1];

                }

                std::cout << "The sum of all the values is " << SumVal << std::endl;

                   int AvVal = 0;
                 for (const auto& VecVal : ListVal)
                 {

                     AvVal = AvVal + VecVal[1];

                 }


                    std::cout << "Avarage of all values " << AvVal / size(ListVal) << std::endl;

                    int MinVal = INT_MAX;
                    int MaxVal = INT_MIN;
                for (const auto& VecVal : ListVal)
                {
                 
                
                 if (VecVal[1] > MaxVal)
                 {

                     MaxVal = VecVal[1];

                 }
                 else if (VecVal[1] < MinVal)
                 {

                     MinVal = VecVal[1];

                 }

                }

                 std::cout << "Min: " << MinVal << std::endl;
                 std::cout << "Max: " << MaxVal << std::endl;

             }
             else
             {

                 std::cout << "You currently dont have any data values to look at" << std::endl;
             
             }

             std::string str;
             std::getline(std::cin, str);
             

         }
            break;

        
         case 4:

            std::cout << "test" << std::endl;
            
            break;

        
         case 5:

            std::cout << "test" << std::endl;
            
            break;
        
         case 6:

            run = false;
            
            break;
        
         default:

            std::cout << "test" << std::endl;
            
            break;
        
        
        
        }

        std::cout << "Klick \"ENTER\" too continue" << std::endl;
        std::string str;
        std::getline(std::cin, str);

    }
}

