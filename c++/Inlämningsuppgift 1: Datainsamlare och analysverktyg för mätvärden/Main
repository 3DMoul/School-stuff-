#include <iostream>
#include <vector>
#include <string>
#include <list>
#include <cstring>

int main()
{
    bool run = true;


    
        

std::list<std::vector<int>> ListVal = {};

    //menyn
    while (run == true)
    {

        int Choice;

        
        
        
        
        std::cout << "---------------------------------" << std::endl;
        std::cout << "Datainsamlare och analysverktyg för mätvärden" << std::endl;
        std::cout << "[1] Input more more data" << std::endl;
        std::cout << "[2] Print all data" << std::endl;
        std::cout << "[3]" << std::endl;
        std::cout << "[4]" << std::endl;
        std::cout << "[5]" << std::endl;
        std::cout << "[6] End Program" << std::endl;
        /*std::cout << "[7]" << std::endl;
        std::cout << "[8]" << std::endl;
        std::cout << "[9]" << std::endl;
        std::cout << "[10]" << std::endl;*/
        std::cout << "---------------------------------" << std::endl;

        
        
        
        while (!(std::cin >> Choice))
        {
            std::cout << "Error you have inputed a invalid value please input one of the meny options: " << std::endl;
            std::cin.clear();
            std::cin.ignore(10000, '\n');
        }

        switch (Choice)
        {
         case 1:

         {
             std::cout << "How many values do you want to add" << std::endl;
             int times = 0;
             std::cin >> times;
             for (int i = 0; i < times; i++)
             {

                 std::vector<int> Values(2);

                 std::cout << "[" << i + 1 << "]" << "Value: ";

                 int SubVal = 0;
                 std::cin >> SubVal;
                 //Time added
                 Values[0] = 0;

                 Values[1] = SubVal;
                 std::cout << Values[0] << Values[1];

                 ListVal.push_back(Values);

             }
             
         }
            
            
            break;

         case 2:

         {
             std::cout << "You have [" << size(ListVal) << "]" << std::endl;
             std::cout << "Do you want to list them [Y/N] : ";
             std::string Des;
             std::cin >> Des;
             if (Des == "Y")
             {

                 for (const auto& vec : ListVal) 
                 {
                     for (int n : vec) 
                     {
                         std::cout << n << " ";
                     }
                     std::cout << std::endl;
                 }
                 
             }
             else if (Des == "N")
             {
                 break;
             }
             else
             {
                 std::cout << "Wrong input" << std::endl;
             }
             
         }
            
            break;

         case 3:

            std::cout << "test" << std::endl;
            
            break;

        
         case 4:

            std::cout << "test" << std::endl;
            
            break;

        
         case 5:

            std::cout << "test" << std::endl;
            
            break;
        
         case 6:

            run = false;
            
            break;
        
         default:

            std::cout << "test" << std::endl;
            
            break;
        
        
        
        }

    }
}
